<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dip"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:textSize="28sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/info1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info1"
            android:layout_alignRight="@+id/info1"
            android:layout_below="@+id/info1"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info2"
            android:layout_alignRight="@+id/info2"
            android:layout_below="@+id/info2"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info3"
            android:layout_alignRight="@+id/info3"
            android:layout_below="@+id/info3"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info4"
            android:layout_alignRight="@+id/info4"
            android:layout_below="@+id/info4"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info5"
            android:layout_alignRight="@+id/info5"
            android:layout_below="@+id/info5"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info6"
            android:layout_alignRight="@+id/info6"
            android:layout_below="@+id/info6"
            android:text="TextView" >
        </TextView>

        <TextView
            android:id="@+id/info8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/info7"
            android:layout_alignRight="@+id/info7"
            android:layout_below="@+id/info7"
            android:text="TextView" >
        </TextView>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/info8"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_companylogo" />

    </RelativeLayout>

</ScrollView>